{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "strict": true,
        "sourceMap": true,
        "module": "esnext",
        "target": "es5",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["es2019", "dom"],
        "skipLibCheck": true,
        "noImplicitOverride": true
    },
    "include": ["src", "types", "build-scripts", "configs"],
    "exclude": ["**/node_modules", "**/.*/"],
    "ts-node": {
        "files": true,
        "compilerOptions": {
            "esModuleInterop": true,
            "target": "esnext",
            "allowSyntheticDefaultImports": true,
            "module": "commonjs"
        },
        "transpileOnly": true
    }
}
